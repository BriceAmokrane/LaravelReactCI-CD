<?xml version="1.0"?>
<ruleset name="Laravel Ruleset">
    <description>PHP CodeSniffer ruleset for a Laravel/React App</description>

    <!-- Inclure les standards PSR-12 -->
    <rule ref="PSR12"/>

    <!-- Exclure certains fichiers/dossiers -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>

    <!-- VÃ©rifier uniquement certains dossiers -->
    <file>app</file>
    <file>config</file>
    <file>routes</file>
    <file>database</file>
    <file>tests</file>

    <!-- Custom rules -->
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>
    <rule ref="Squiz.Functions.MultiLineFunctionDeclaration"/>
</ruleset>
