{
    "extends": ["plugin:react/recommended"],
    "plugins": ["react", "jsx-a11y", "react-hooks"],
    "env": {
        "browser": true,
        "es2021": true
    },
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/react-in-jsx-scope": "off"
    },
    "parserOptions": {
        "sourceType": "module"
    }
}

